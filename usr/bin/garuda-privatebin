#!/usr/bin/env bash

set -euo pipefail

if PRIVATEBIN_URL="$(privatebin -c "/usr/share/garuda/garuda-common-settings/garuda-privatebin.json" create --expire "1month")"; then
    /usr/lib/garuda/qrcode "$PRIVATEBIN_URL" || true
    echo "$PRIVATEBIN_URL"
else
    echo -e "\n\033[1;31mUpload failed!\033[0m"
fi
